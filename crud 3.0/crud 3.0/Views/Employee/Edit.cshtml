@model crud_3._0.Models.Employee
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" action="Edit">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="hidden" asp-for="Id" />
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter employee name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" class="form-control" asp-for="City" placeholder="Enter city" />
                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" class="form-control" asp-for="State" placeholder="Enter state" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" class="form-control" asp-for="Salary" placeholder="Enter salary" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-sm btn-outline-success float-right" type="submit" value="Submit" />
                        </div>
                        </form>
            </div>
        </div>
    </div>
</div>

